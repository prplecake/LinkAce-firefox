{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions":{
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "chrome": false
  },
  "rules":{
    "semi": 2,
    "quotes": ["error", "double", { "allowTemplateLiterals": true }],
    "@typescript-eslint/no-non-null-assertion": "off"
  }
}